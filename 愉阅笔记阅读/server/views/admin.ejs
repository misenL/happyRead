	<div class="container">
		<div class="row">
			<div class="col">
				<form action="/upload/do_upload" method="post" enctype="multipart/form-data">
					<div class="form-group">
						<label>小说标题</label>
						<input type="text" class="form-control" placeholder="输入标题" name="bookName" required>
					</div>
					<div class="form-group">
						<label>作者</label>
						<input type="text" class="form-control" placeholder="输入作者" name="author" required>
					</div>
					<div class="form-group">
						<label>简介</label>
						<textarea name="intro" class="form-control" cols="3" rows="5" placeholder="输入简介" required></textarea>
					</div>
					<div class="form-group">
						<label>类型：</label>
						<input type="radio" name="adminClass" value="xuanhuan" checked>玄幻
						<input type="radio" name="adminClass" value="lingyi">灵异
						<input type="radio" name="adminClass" value="dushi">都市
						<input type="radio" name="adminClass" value="zhichang">职场
						<input type="radio" name="adminClass" value="tongren">同人
						<input type="radio" name="adminClass" value="chunai">纯爱
					</div>
					<div class="form-group">
						<label>连载状态：</label>
						<input type="radio" name="ends" value="continued" checked>连载中
						<input type="radio" name="ends" value="end">已完结
					</div>
					<div class="form-group">
							<label>文件上传</label>
						<input type="file" class="form-control" placeholder="输入作者" name="files" value="上传小说" required>
					</div>
					<div class="form-group">
							<label>封面上传</label>
						<input type="file" class="form-control" value="上传封面" name="files" required>
					</div>
					<button type="submit" class="btn btn-primary">提交</button>
				</form>
			</div>
			<div class="col-8">
				<table class="table">
					<thead class="thead-dark">
						<tr>
							<th scope="col">#</th>
							<th scope="col">书名</th>
							<th scope="col">作者</th>
							<th scope="col">类型</th>
							<th scope="col">字数</th>
							<th scope="col">文件上传日期</th>
							<th scope="col">封面</th>
							<th scope="col">操作</th>
						</tr>
					</thead>
					<tbody>
						<% books.forEach(function(book,id){ %>
						<tr>
							<% var str=book.bookSrc.slice(7)%>
							<th scope="row"><%= id+1 %></th>
							<td><%= book.bookName %></td>
							<td><%= book.author %></td>
							<td><%= book.bookType %></td>
							<td><%= book.wordCount %></td>
							<td><%= book.createAt.getFullYear() %>-<%= book.createAt.getMonth()+1 %>-<%= book.createAt.getDate() %></td>
							<td><img style="width:50px;height:40px" src="<%=book.bookSrc%>"></td>
							<td><a href="/upload/delete/?act=del&id=<%=book.id%>" onclick="return confirm('确定删除？')">删除</a></td>
						</tr>
						<% }); %>

						<!-- //localhost:3000   -->
					</tbody>
				</table>
				
